/* pages/address/address.wxss */

page {
  background-color: #eee;
  color: #666;
}
image {
  width: 100%;
  height: 100%;
}

.youhuiquan-title {
  background-color: #fff;
  font-size: 28rpx;
  height: 40rpx;
  padding: 20rpx;
}

/*收货地址信息*/
.address {
  width: 100%;
  position: relative;
  background-color: #fff;
  border-top: 2rpx solid #eee;
}
.address-name-tel{
  font-size: 30rpx;
  color: #333;
}
.now-address{
  font-size: 26rpx;
  color: #333;
}

.address .address-message {
  padding: 20rpx;
  width: 100%;
  padding-left: 20rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #eee;
}
.address image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  /* right: 30rpx; */
  /* top: 50%; */
  /* margin-top: -25rpx; */
}
.button {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background: linear-gradient(to left,rgb(19, 191, 222), rgb(120, 233, 250));
  color: #fff;
  font-size: 34rpx;
  line-height: 100rpx;
  margin: 0 auto;
  text-align: center;
}
/* .button:active {
  background-color: rgba(255, 0, 0, 0.8);
  color: #fff;
} */
.add-bottom,.left-nav,.right-nav,.edit-btn,.del-btn{
  display: flex;
  align-items: center;
}
.add-bottom{
  justify-content: space-between;
  box-sizing: border-box;
  padding: 14rpx 20rpx;
  font-size: 26rpx;
  color: #757575;
  border-bottom: 10rpx solid #eee;
}
.edit-btn{
  margin-right: 30rpx;
}
