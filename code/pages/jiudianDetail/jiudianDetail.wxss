/* pages/jiudianDetail/jiudianDetail.wxss */
@import "../../iconfont/iconfont.wxss";
@import "../dataItemTemp/dataItemTemp.wxss";
.labels-contain{
  margin-top: 10rpx;
}
.label{
  padding: 4rpx 10rpx;
  border: 1rpx solid #f68076;
  margin-right: 8rpx;
  min-width: 76rpx;
  text-align: center;
  color:#fff;
  background-color:#f68076;
  font-size: 24rpx;
}
.addr-contain{
  margin-bottom: 10rpx;
  margin-top: 4rpx;
  min-height: 80rpx;
}
.addr-contain,.labels-contain{
  padding: 20rpx 30rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #333;
  position: relative;
}
.addr{
  padding-right: 120rpx;
  align-items: flex-start;
}
.daohang-text{
  font-size: 24rpx;
  color: #737373;
  align-items: flex-end;
  display: flex;
}
.daohang{
  width: 44rpx;
  height: 36rpx;
  margin-right: 6rpx;
}

.house-list{
  margin-bottom: 8rpx;
}
.house-item{
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  background-color: #fff;
  border-bottom: 2rpx solid #eee;
}
.house-img{
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
}
.house-detail{
  position: relative;
}
.house-name{
  color: #333;
}
.house-type{
  color: #b2b2b2;
}
.house-price{
  color: #fa3f0b;
  padding-top: 30rpx;
  font-size: 28rpx;
}
.house-state{
  width: 122rpx;
  text-align: center;
  border-radius: 10rpx;
  color: #fff;
  padding: 8rpx 0;
}

.pingjia-top{
  padding: 20rpx 60rpx 20rpx 30rpx;
  background-color: #fff;
  position: relative;
  border-bottom: 2rpx solid #eee;
}
.pingjia-text,.tuijian-text{
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}
.look-more{
  font-size: 26rpx;
  color: #b2b2b2;
}
.more {
  position: absolute;
  width: 16rpx;
  height: 30rpx;
  right: 30rpx;
  top: 25rpx;
}

.pingjia-item{
  padding: 20rpx 30rpx 0 30rpx;
  background-color: #fff;
}
.user-img{
  width: 66rpx;
  height: 66rpx;
  margin-right: 46rpx;
  align-self: flex-start;
  border-radius: 50%;
}
.pingjia{
  border-bottom: 2rpx solid #eee;
}
.pingjia-name{
  font-size: 28rpx;
  color: #333;
}
.pingjia-time{
  font-size: 24rpx;
  color: #737373;
}
.pingjia-des{
  font-size: 24rpx;
  color: #737373;
  background-color: #eee;
  border-radius: 10rpx;
  padding: 14rpx 10rpx;
  margin: 20rpx 0;
  line-height: 180%;
}

.tuijian-text{
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-top: 10rpx;
  border-bottom: 4rpx solid #eee;
}
/* 酒店介绍 */
.introduce-contain{
  margin-bottom: 10rpx;
  margin-top: 4rpx;
  min-height: 20rpx;
}
.introduce-text{
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-top: 10rpx;
}



.jiesuan{
  position: fixed;
  bottom: 0;
  background-color: #fff;
  font-size: 32rpx;
  width: 100%;
}
.total{
  padding: 30rpx;
  color: #333;
}
.jiesuan-btn{
  background-color: #f68076;
  color: #fff;
  padding: 30rpx 150rpx;
}
.cancel-btn{
  background-color: #999;
  color: #fff;
  padding: 30rpx 50rpx;
}
.clear{
  width: 100%;
  height: 120rpx;
  background-color: #fff;
}
/*日期筛选  */
.choose-data-contain{
  width: 80%;
  margin: 30rpx auto;
}
.time-contain{
  border-radius: 10rpx;
  background-color: #fff;
  padding: 4rpx 0;
  font-size: 24rpx;
  min-height: 90rpx;
  margin-bottom: 10rpx;
}
.time-title{
  text-align: center;
  color: #999;
  padding-bottom:4rpx;
}
.title{
  width: 50%;
  text-align: center;
  color: #999;
}
.ruzhu-time{
  width: 50%;
  text-align: center;
}
.picker{
  height: 42rpx;
  font-size: 30rpx;
  color: #333;
}
.choose-item{
  width: 100%;
}
.picker-contain{
  width: 50%;
  text-align: center;
}

  /*入住时间表  */
  .table-contain{
    font-size: 26rpx;
    color: #333;
    text-align: center;
    padding: 20rpx 40rpx;
  }
  .table-item{
    flex: 1 1 ;
    padding: 19rpx 0;
    border-right: 2rpx solid #666;
  }
  .th,.td,.tf{
    border-top: 2rpx solid #666;
    border-left: 2rpx solid #666;
  }
  .tf{
    border-bottom: 2rpx solid #666;
  }

  /*酒店订单弹窗  */
  .data-list{
    background-color: #fff;
  }
  .toast-title{
    text-align: center;
    font-size: 30rpx;
    padding: 20rpx 0;
    word-spacing: 8rpx;
  }
  .toast-img{
    height: 300rpx;
  }
  .toast-labels-contain{
    padding: 20rpx 40rpx;
    font-size: 28rpx;
    flex-wrap: wrap;
    color: #222;
    border-bottom: 10rpx solid #eee;
  }
  .labels-item{
    width: 40%;
  }
  .labels-item:nth-child(2n+1){
    margin-right: 20%;
  }
  .labels-name{
    padding-right: 10rpx;
    color: #737373;
  }
  .shuoming{
    padding: 20rpx ;
    font-size: 28rpx;
    color: #333;
  }
  .msg{
    padding: 0 20rpx 20rpx 20rpx ;
    font-size: 28rpx;
    color: #999;
    line-height: 36rpx;
    border-bottom: 10rpx solid #eee;
  }
  .btn-contain{
    width: 100%;
    position: relative;
    border-radius: 10rpx;
  }
  .jiesuan-bottom{
    position: relative;
    background-color: #fff;
    font-size: 32rpx;
    width: 100%;
  }

  /*蒙版  */
  .mengban{
    width: 100vw;
    height: 100vh;
    position: absolute;
    z-index: 99;
    background-color: #b2b2b2;
    opacity: 0.5;
    top: 0rpx;
  }

  .cancel-img{
    position: absolute;
    right: 16rpx;
    top: 16rpx;
    width: 50rpx;
    height: 50rpx;
  }
  .toastContain{
    position: fixed;
    width: 100%;
    z-index: 1111;
    bottom: -756rpx;
    box-sizing: border-box;
    transition: all .4s;
    height: 1018rpx;
  }
  .toastInnerContain{
    position: relative;
    border-radius: 10rpx;
    overflow:  hidden;
  }
  .order-detail-top{
    z-index: 1111;
    background-color: #fff;
  }
  .introduce-contain, .estab{
    background-color: #fff;
  }
  .estab{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    padding: 40rpx 0;
  }
  .estab-item{
    width: 24%;
    font-size: 22rpx;
    color: #333;
    box-sizing: border-box;
    padding: 10rpx 30rpx;
    text-align: center;
  }
  .estab-text{
    margin-bottom: 4rpx;
  }