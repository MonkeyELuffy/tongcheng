/*订单详情*/
  .order-detail {
    width: 100%;
    display: flex;
		border-bottom: 10rpx solid #eee;
    padding: 20rpx;
    box-sizing: border-box;
    background-color: #fff;
  }
  /*产品图片*/
  .order-img {
    width: 160rpx;
    height: 160rpx;
    margin: 20rpx 0rpx;
  }
  /*产品介绍*/
  .order-text-price {
    flex: 1 1;
    display: flex;
    flex-direction: column;
    margin: 40rpx 0 20rpx 20rpx;
    padding-right: 20rpx;
    box-sizing: border-box;
  }
  .order-text {
    width: 100%;
    padding-bottom: 20rpx;
    font-size: 24rpx;
    color: #666;
  }
  .order-price {
    width: 100%;
    height: 60rpx;
    display: flex;
    line-height: 60rpx;
    justify-content: space-between;
  }
  /*实际价格*/
  .order-price .order-real-price {
    color: red;
    font-size: 24rpx;
    display: flex;
    font-weight: 800;
  }
  /*原价*/
  .order-price .order-before-price {
    color: #999;
    font-size: 20rpx;
    text-decoration:line-through;
    align-self: flex-start;
    padding-left: 28rpx;
  }
  /*产品数量*/
  .order-price .order-quantity {
    color: #999;
    font-size: 24rpx;
  }
  /*添加的图片  */
  .image-contain {
    position: relative;
    width: 100%;
    padding: 10rpx 40rpx;
    box-sizing: border-box;
  }
  .img-with-del{
    width: 170rpx;
    height: 170rpx;
  }
  .add-img {
    width: 170rpx;
    height: 170rpx;
    box-sizing: border-box;
    margin: 10rpx 20rpx;
    position: relative;
    padding: 20rpx 20rpx 0 0 ;
  }
  .message{
    color: #aaa;
    font-size: 24rpx;
    text-align: center;
  }
.up-img{
  position: relative;
}
.del-img{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  z-index: 1;
  right: 0rpx;
  top: 0rpx;
}
.pingjia-contain{
  color: #666;
  font-size: 28rpx;
}
.pingjia-img{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
.pingjia-item{
  height: 90rpx;
  padding: 0 20rpx;
}