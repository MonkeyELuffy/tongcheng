/* pages/valuation/valuation.wxss */
.contain {
   height: 100vh; 
  background-color: #eee;
}
image {
  width: 100%;
  height: 100%;
}
/*评价内容包含框*/
.quality-service-container {
  background-color: #fff;
  width: 100%;
  padding: 8rpx 40rpx;
  border-bottom: 2rpx solid #eee;
  color: #666;
  box-sizing: border-box
}
.quality-service-container .title {
  font-size: 24rpx;
}

/*设备质量和服务态度*/
.quality-service {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  font-size: 24rpx;
  color: #666;
  align-items: center;
}
.item {
 position: absolute;
 top: 5rpx;
 width: 20rpx;
 height: 50rpx;
}

/*评价星星*/
.stars {
  width: 50%;
  height: 80rpx;
  position: relative;
  display: flex;
  align-items: center;
  right: -254rpx;
}
.star-image {
  position: absolute;
  left: 0rpx;
 width: 40rpx;
 height: 40rpx;
 src: "img/normal.png";
}

/*评价输入框*/
.textarea-addimage {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  background-color: #eee;
}
.textarea-addimage .valuation-text {
  box-sizing: border-box;
  background-color: #fff;
  flex: 1 1;
  margin: 40rpx;
  font-size: 28rpx;
  color: #999;
  height: 320rpx;
  border: 2rpx solid rgb(0, 188, 213);
  border-radius: 4rpx;
  padding: 20rpx;
}
.add-image {
  width: 170rpx;
  height: 170rpx;
    margin: 10rpx;
    position: relative;
    padding: 20rpx 20rpx 0 0 ;
  box-sizing: border-box;
}
.textarea-addimage .add-image:after {
  content: "发图片";
  position: absolute;
  bottom: 0rpx;
  left: 48rpx;
  font-size: 24rpx;
  color: #aaa;
}
/*底部评价按钮*/
.button {
  width: 500rpx;
  height: 100rpx;
  background: linear-gradient(to left,rgb(19, 191, 222), rgb(120, 233, 250));
  border-radius: 40rpx;
  color: #fff;
  font-size: 34rpx;
  line-height: 100rpx;
  position: relative;
  margin: 0 auto;
  text-align: center;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
}
