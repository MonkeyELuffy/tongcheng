}
.comment-name{
  font-size: 28rpx;
  color: #666;
}
.comment-time{
  font-size: 22rpx;
  color: #999;
}
.conmment-text{
  font-size: 24rpx;
  color: #333;
  box-sizing: border-box;
  padding: 20rpx;
  background-color: #eee;
  border-radius: 8rpx;
