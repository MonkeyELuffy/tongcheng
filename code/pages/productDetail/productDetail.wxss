/*评价样式  */
.comment-contain{
  width: 100%;
  position: relative;
}
.comment-title{
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
  padding: 20rpx;
}
.shop-score{
  width: 100%;
  text-align: center;
  box-sizing: border-box;
  padding: 40rpx;
  font-size: 30rpx;
  color: #333;
  border-bottom: 10rpx solid #eee;
  font-weight: 600;
}
.score{
  font-size: 40rpx;
  color: #fa3f06;
}
.comment-item{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 20rpx 0 20rpx;
