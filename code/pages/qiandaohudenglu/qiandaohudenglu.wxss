/* pages/qiandaohudenglu/qiandaohudenglu.wxss */
@import "../imageSwiper/imageSwiper.wxss";
.scroll-view{
  background-color: #eee;
}
.title{
  padding: 30rpx;
  color: #333;
  font-size: 34rpx;
  font-weight: 600;
}

/*顶部信息  */
.top-info{
  background-color: #fff;
  box-sizing: border-box;
  padding: 30rpx;
  position: relative;
}
.info-name{
  font-size: 34rpx;
  color: #333;
  font-weight: 600;
}
.info-des{
  font-size: 28rpx;
  color: #999;
}
.daohang-contain{
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
}
.daohang-contain-img{
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}

/*景点介绍  */
.jingdian-des{
  font-size: 30rpx;
  color: #888;
  background-color: #fff;
  margin-top: 2rpx;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  position: relative;
}

/*必看推荐  */
.list-1-item{
  background-color: #fff;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 30rpx;
  margin-top: 2rpx;
}
.list-1-img{
  width: 200rpx;
  height: 200rpx;
  margin-right: 40rpx;
}
.list-1-info{
  width: 40%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}
.list-1-name{
  color: #333;
  font-size: 28rpx;
  flex: 1 1;
}
.list-1-today{
  color: #666;
  font-size: 26rpx;
}
.list-1-sale{
  font-size: 26rpx;
  color: #999;
}
.list-1-price{
  font-size: 28rpx;
  color: #555;
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
}
.line{
  width: 2rpx;
  height: 160rpx;
  background-color: #ccc;
  margin: 0 20rpx;
}
.price-and-buy{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.price{
  color: red;
  font-size: 34rpx;
}
.buy-btn{
  color: red;
  font-size: 30rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  background-color: #ccc;
  margin-top: 10rpx;
}

/*tab菜单  */
.tab-contain{
  display: flex;
  box-sizing: border-box;
  padding: 30rpx;
}
.tab{
  font-size: 34rpx;
  font-weight: 600;
  margin-right: 20rpx;
}
.list-2-info{
  background-color: #fff;
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 4rpx;
}
.list-2-name{
  font-size: 30rpx;
  color: #333;
}
.qi{
  color: #999;
  font-size: 28rpx;
  margin-left: 4rpx;
}
/*各个价格规格  */
.list-2-prices{
  background-color: #fff;
  box-sizing: border-box;
  padding: 30rpx;
  margin-top: 4rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list-2-prices-left{
  width: 60%;
}
.list-2-price-name{
  font-size: 32rpx;
  color: #333;
}
.list-2-price-des{
  font-size: 28rpx;
  color: #999;
}
.list-2-price-labels{
  display: flex;
  margin-top: 20rpx;
}
.list-2-price-label-item{
  font-size: 28rpx;
  color: #888;
  margin-right: 10rpx;
}

/*查看更多  */
.see-more{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #999;
  background-color: #fff;
  padding: 20rpx;
}
.see-more-img{
  width: 30rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

/*list3  */
.list-3-item{
  background-color: #fff;
  box-sizing: border-box;
  padding: 30rpx;
  margin-top: 4rpx;
}
.list-3-name{
  font-size: 28rpx;
  color: #333;
}
.list-3-star-contain,.list-3-img-contain{
  display: flex;
  align-items: center;
  margin: 10rpx 0;
}
.star-item{
  width: 30rpx;
  height: 30rpx;
  margin-right: 4rpx;
}
.img-item{
  width: 150rpx;
  height: 150rpx;
  margin-right: 10rpx;
}
.list-3-des{
  font-size: 26rpx;
  color: #666;
  line-height: 200%;
}
.username-and-dianzan{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

/*list4  */
.list-4-contain{
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 20rpx;
  justify-content: space-between;
  background-color: #fff;
}
.list-4-item{
  width: 49%;
  margin-bottom: 10rpx;
}
.list-4-img{
  width: 100%;
  height: 200rpx;
}
.list-4-name{
  font-size: 30rpx;
  color: #444;
  padding: 14rpx 0;
}