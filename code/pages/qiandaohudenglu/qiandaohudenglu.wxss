/* pages/qiandaohudenglu/qiandaohudenglu.wxss */
@import "../imageSwiper/imageSwiper.wxss";
.scroll-view{
  background-color: #aaa;
}
.title{
  padding: 30rpx;
  color: #333;
  font-size: 34rpx;
  font-weight: 600;
}

/*顶部信息  */
.top-info{
  background-color: #fff;
  box-sizing: border-box;
  padding: 30rpx;
  position: relative;
}
.info-name{
  font-size: 34rpx;
  color: #333;
  font-weight: 600;
}
.info-des{
  font-size: 28rpx;
  color: #999;
}
.daohang-contain{
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
}
.daohang-contain-img{
  width: 50rpx;
  height: 50rpx;
}

/*景点介绍  */
.jingdian-des{
  font-size: 30rpx;
  color: #888;
  background-color: #fff;
  margin-top: 2rpx;
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  align-items: center;
}

/*必看推荐  */
.list-1-item{
  background-color: #fff;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 30rpx;
  margin-top: 2rpx;
}
.list-1-img{
  width: 200rpx;
  height: 200rpx;
  margin-right: 40rpx;
}
.list-1-info{
  width: 40%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}
.list-1-name{
  color: #333;
  font-size: 28rpx;
  flex: 1 1;
}
.list-1-today{
  color: #666;
  font-size: 26rpx;
}
.list-1-sale{
  font-size: 26rpx;
  color: #999;
}
.list-1-price{
  font-size: 28rpx;
  color: #555;
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
}
.line{
  width: 2rpx;
  height: 160rpx;
  background-color: #ccc;
  margin: 0 20rpx;
}
.price-and-buy{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.price, .buy-btn{
  color: red;
  font-size: 34rpx;
}
.buy-btn{
  border-radius: 8rpx;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  background-color: #ccc;
  margin-top: 10rpx;
}

/*tab菜单  */
.tab-contain{
  display: flex;
  box-sizing: border-box;
  padding: 30rpx;
}
.tab{
  font-size: 34rpx;
  font-weight: 600;
  margin-right: 20rpx;
}
.list-2-info{
  background-color: #fff;
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list-2-name{
  font-size: 30rpx;
  color: #333;
}
.qi{
  color: #999;
  font-size: 28rpx;
}