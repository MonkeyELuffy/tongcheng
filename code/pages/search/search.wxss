/* pages/search/search.wxss */
@import "../paixuTemplate/paixuTemplate.wxss";
@import "../dataItemTemp/dataItemTemp.wxss";

.top-nav{
  width: 100%;
  z-index: 10;
  display: flex;
  padding: 30rpx 30rpx 30rpx 50rpx;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #fff;
}
/*搜索框*/
.search {
  z-index: 100;
  background-color: transparent;
  flex: 1 1;
}
.search input {
  width: 100%;
  height: 60rpx;
  background-color: #eee;
  opacity: 0.5;
  color: #666;
  font-size: 24rpx;
  padding-left: 80rpx;
  border-radius: 30rpx;
  border: 2rpx solid #eee;
  margin-left: -50rpx;
}
.search .icon {
  width: 30rpx;
  height: 30rpx;
}
/*确定  */
.sure{
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
  height: 60rpx;
  box-sizing: border-box;
  color:#333;
}