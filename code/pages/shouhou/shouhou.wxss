page {
  background-color: #eee;
}
.goods {
  position: relative;
  background: #fff;
  padding: 20rpx 20rpx 0 0;
  display: flex;
  border-bottom: 2rpx solid #eee;
}
.good-img {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}
.good-cont {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  color: #555;
  font-size: 28rpx;
  padding: 10rpx;
  height: 160rpx;
}
.good-price {
  width: 100%;
}
.price {
  font-size: 32rpx;
  color: #ec5151;
}
.total {
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 10;
  background-color: #fff;
  border: 0;
  margin: 0;
}
.checked{
  width: 50rpx;
  height: 50rpx;
  margin: 20rpx;
}
.button {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background: linear-gradient(to right,rgb(19, 191, 222), rgb(120, 233, 250));
  color: #fff;
  font-size: 34rpx;
  line-height: 100rpx;
  margin: 0 auto;
  text-align: center;
}
.tuikuan{
  position: relative;
  padding: 30rpx 50rpx;
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
}
.more {
  position: absolute;
  width: 20rpx;
  height: 40rpx;
  right: 30rpx;
  top: 30rpx;
  z-index: 101;
}
.ketuikuan{
  background-color: #fff;
  padding: 30rpx 50rpx;
  font-size: 28rpx;
  color: #999;
}
.totalprice{
  color: #fa3f06;
}