/* pages/dingdanxiangqing/dingdanxiangqing.wxss */

.contain {
  width: 100%;
  height: 100vh;
  background-color: #eee;
  color: #333;
}
image {
  width: 100%;
  height: 100%;
}
  /*产品详情*/
  .order-detail {
    background-color: #eee;
    margin-top: 8rpx;
  }
  .order-name{
    font-size: 34rpx;
    font-weight: 600;
    box-sizing: border-box;
    padding: 30rpx;
		margin-bottom: 4rpx;
    color: #333;
  }
  .order-name-contain{
    background-color: #eee;
    margin-bottom: 4rpx;
  }
  /*产品图片*/
  .order-img {
    width: 160rpx;
    height: 160rpx;
    margin: 20rpx 0 20rpx 20rpx;
  }
  /*产品介绍*/
  .order-text-price {
    width: 40%;
    display: flex;
    flex-direction: column;
    margin: 40rpx 0 20rpx 20rpx;
  }
  .order-text {
    width: 100%;
    height: 80rpx;
    font-size: 24rpx;
    color: #666;
  }
  .order-price {
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 30rpx;
    color: rgb(250,63,6);
    font-size: 28rpx;
		margin-bottom: 8rpx;
  }
  .order-num{
    font-size: 24rpx;
    color: #333;
    font-weight: 500;
  }
  .order-title{
    font-size: 32rpx;
    color: #333;
    font-weight: 600;
  }
.shop-img{
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
}
.shop-name{
  color: #333;
  font-weight: 700;
  font-size: 28rpx;
}
.shop-name-img{
  display: flex;

}
  .p-10{
    box-sizing: border-box;
    padding: 20rpx 30rpx;
    background-color: #fff;
  }
  .jingdian-order{
    background-color: #eee;
  }
  .order-time{
    text-align: center;
    font-size: 28rpx;
    color: rgb(250,63,6);
    margin-bottom: 4rpx;
  }
  .order-detail-key{
    font-size: 30rpx;
    color: #666;
    box-sizing: border-box;
    padding: 20rpx 30rpx;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
  }
  .order-title{
    margin-bottom: 4rpx;
  }
  .kefu{
    margin-top: 8rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .line{
    height: 8rpx;
    background-color: #eee;
  }
  .kefu-img{
    width: 40rpx;
    height: 40rpx;
  }
  .remain-time{
    font-size: 28rpx;
    color: #aaa;
    flex: 1 1;
    padding: 20rpx;
  }
  /*实际价格*/
  .order-price .order-real-price {
    color: red;
    font-size: 24rpx;
    display: flex;
    font-weight: 800;
  }
  /*产品数量*/
  .order-price .order-quantity {
    color: #999;
    font-size: 24rpx;
  }
  .tiquma-contain{
    background-color: #fff;
    box-sizing: border-box;
    padding: 40rpx 60rpx;
    text-align: center;
  }
  .tiquma{
    border-radius: 10rpx;
    border: 6rpx solid rgb(246, 127, 121);
    font-size: 40rpx;
    color:  rgb(246, 127, 121);
    line-height: 250%;
    padding: 30rpx 0;
  }
  .take-code{
    font-size: 48rpx;
    font-weight: 600;
  }