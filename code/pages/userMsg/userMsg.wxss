/* pages/personCenter/personCenter.wxss */
.contain {
  width: 100%;
  height: 100vh;
  background-color: #eee;
  border-top: 14rpx solid #eee;
}

/*头像*/
.userInfo {
  background-color: #fff;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  border-bottom: 10rpx solid #eee;
}
.userInfo image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 100rpx;
}
/*更多*/
.more {
  width: 40rpx;
  height: 40rpx;
}
/*个人信息*/
.key {
  color: #333;
  font-size: 32rpx;
  width: 200rpx;
}
.value {
  color: #999;
  font-size: 28rpx;
  text-align: right;
}

.button {
  width: 500rpx;
  height: 100rpx;
  background: linear-gradient(to right,rgb(19, 191, 222), rgb(120, 233, 250));
  border-radius: 50rpx;
  color: #fff;
  font-size: 34rpx;
  line-height: 100rpx;
  margin: 0 auto;
  text-align: center;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
}

