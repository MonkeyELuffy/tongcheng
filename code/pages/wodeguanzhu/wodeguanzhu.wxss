page {
  background-color: #eee;
}
/*横向排列的菜单*/
.nav-title {
  position: fixed;
  z-index: 100;
  background-color: #fff;
  color: #666;
  font-size: 36rpx;
  white-space: nowrap; 
  box-shadow: 0rpx 0rpx 2rpx #ddd ;
  padding: 20rpx 40rpx;
  box-sizing:border-box;
  border-top: 10rpx solid #eee;
}
.nav-item {
  display: inline-block;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}

/*分类*/
.fenlei-contianer {
  background-color: #fff;
  position: relative;
  width: 100%;
  margin: 0 auto;
  box-sizing: border-box;
}
.fenlei-contianer .fenlei-title {
  width: 100%;
  height: 50rpx;
  padding: 20rpx;
  font-size: 30rpx;
  margin: 30rpx 0;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
.fenlei-contianer .fenlei-title image {
  width: 50rpx;
  height: 50rpx;
}
.fenlei-contianer .fenlei-ul {
  width: 100%;
  position: absolute;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  margin:120rpx 0;
}
.fenlei-contianer .fenlei-list {
  padding: 20rpx 40rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
}
/*数据列表  */
.data-list{
  width: 100%;
  position: absolute;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.item{
  padding:20rpx;
  background-color: #fff;
}


.img-contain{
  width: 184rpx;
  height: 184rpx;
  margin-right: 34rpx;
  box-sizing: border-box;
  align-self: flex-start;
  overflow: hidden;
}
.item-image{
  width: 100%;
  max-height: 100%;
  box-sizing: border-box;
  border: 2rpx;
  padding: 2rpx;
}
.detail-name{
  font-size: 32rpx;
  color: #333;
  font-weight: 700;
  padding-bottom: 4rpx;
}
.label-contain{
  font-size: 24rpx;
}
.label-item{
  padding: 5rpx 10rpx;
  border: 1rpx solid #f68076;
  margin-right: 8rpx;
  min-width: 76rpx;
  text-align: center;
}
.haoping{
  font-size: 28rpx;
  color: #666;
  padding-left: 10rpx;
}
.sale-and-juli{
  margin-top: 40rpx;
  color: #b2b2b2;
  font-size: 28rpx;
  border-bottom: 1rpx solid #ddd;
  padding-bottom: 30rpx;
}
.juli{
  padding-right: 20rpx;
}

/*底部编辑按钮  */
.bottom-btn{
  background-color: #fff;
  position: fixed;
  z-index: 100;
  bottom: 0;
  left: 0;
  font-size: 32rpx;
  padding: 20rpx 40rpx;
  color: #f67f79;
  width: 100%;
  box-sizing: border-box;
}
/*编辑时的样式  */
.choose-img{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.choose-all{
  position: absolute;
  left: 20rpx;
}

.guanli{
  margin: 0 10rpx;
}