
<!--顶部菜单-->
<view class="nav-title flex-between" style="width: 100%">
    <view class="nav-item" wx:for="{{navItems}}" style="color: {{item.checked ? '#f67f79' : '#737373' }};" bindtap="checked" wx:for-index="index" data-id="{{item.id}}" data-index="{{index}}" data-name="{{item.name}}">
      {{item.name}}
    </view>
  </view>

<view class="fenlei-contianer">
  <scroll-view class="fenlei-ul" style="height:{{scrollHeight}}px;" scroll-y="true" bindscrolltoupper="refresh" bindscrolltolower="bindDownLoad">
    <view class="fenlei-list" wx:for="{{youhuiquan_list}}" >
      <view class='top-nav flex-between' data-cpns_id="{{item.cpns_id}}" bindtap='goDetail'>
        <!--已使用优惠券显示  -->
        <image class='used-img' src='{{usedImg}}' wx:if='{{item.used}}'></image>
        <view class='top-left'>
          <view class='type'>{{item.title}}</view>
          <view class='value'>￥{{item.value}}</view>
        </view>
        <view class='top-right'>
          <view class='form'>来源：{{item.form}}</view>
          <view class='line'></view>
          <view class='time'>有效期至{{item.time}}</view>
        </view>
      </view>
      <view class='disc'>{{item.disc}}</view>
    </view>
    <!-- <view class="no-more">没有更多的数据了</view>  -->
    <view style="width:100%;height:100rpx;"></view>
  </scroll-view>
</view> 
