page {
  background-color: #eee;
}
/*横向排列的菜单*/
.nav-title {
  position: fixed;
  z-index: 100;
  background-color: #fff;
  color: #666;
  font-size: 36rpx;
  white-space: nowrap; 
  box-shadow: 0rpx 0rpx 2rpx #ddd ;
  padding: 20rpx 40rpx;
  box-sizing:border-box;
  border-top: 10rpx solid #eee;
}
.nav-item {
  display: inline-block;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}

/*分类*/
.fenlei-contianer {
  background-color: #fff;
  position: relative;
  width: 100%;
  margin: 0 auto;
  box-sizing: border-box;
}
.fenlei-contianer .fenlei-title {
  width: 100%;
  height: 50rpx;
  padding: 20rpx;
  font-size: 30rpx;
  margin: 30rpx 0;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
.fenlei-contianer .fenlei-title image {
  width: 50rpx;
  height: 50rpx;
}
.fenlei-contianer .fenlei-ul {
  width: 100%;
  position: absolute;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  margin:120rpx 0;
}
.fenlei-contianer .fenlei-list {
  padding: 20rpx 40rpx;
  margin: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
}
/*分类item各自的style  */
.type{
  color: rgb(19, 191, 222);
  font-size: 30rpx;
}
.value{
  font-size: 60rpx;
  color: #333;
}
.disc{
  font-size: 24rpx;
  color: #999;
}
.top-right{
  font-size: 28rpx;
  color: #737373;
}
.line{
  height: 2rpx;
  background-color: #737373;
  margin: 10rpx 0;
}
.used-img{
  width: 140rpx;
  height: 100rpx;
  position: absolute;
  z-index: 1;
  left: 240rpx;
}